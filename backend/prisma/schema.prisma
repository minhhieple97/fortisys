generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_PRIMARY")
}

model VitalRecord {
  id          String   @id @default(uuid())
  workerId    String   @map("worker_id")
  heartRate   Int      @map("heart_rate")
  temperature Float
  timestamp   DateTime @default(now())

  @@map("vital_records")
  @@index([workerId])
  @@index([timestamp])
  @@index([workerId, timestamp])
}